<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailsFragment">


    <TextView
        android:id="@+id/nameView1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="@string/text_view1" />

    <TextView
        android:id="@+id/nameView2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/heightView1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="@string/text_view2" />

    <TextView
        android:id="@+id/heightView2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/massView1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="@string/text_view3" />

    <TextView
        android:id="@+id/massView2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="20dp" />

</LinearLayout>